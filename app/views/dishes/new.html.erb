<h2>Create New Dish</h2>

<%= form_tag dishes_path, class: 'form' do %>
  <%= label :dish, :name, 'Name', class: 'col-form-label' %>
  <%= text_field :dish, :name, class: 'form-control' %>
  <%= label :dish, :hall, 'Hall', class: 'col-form-label' %>
  <%= select :dish, :hall, ['John Jay','Ferris Booth Commons','JJ'], {}, {class: 'form-control col-1'} %>
  <%= label :dish, :property, 'Property', class: 'col-form-label' %>
  <%= text_field :dish, :property, class: 'form-control' %>
  <%= label :dish, :calories, 'Calories', class: 'col-form-label' %>
  <%= text_field :dish, :calories, class: 'form-control' %>
  <%= label :dish, :image, 'Url to food image', class: 'col-form-label' %>
  <%= text_field :dish, :image, class: 'form-control' %>
  <br/>
  <%= submit_tag 'Save Changes', class: 'btn btn-primary' %>
  <%= link_to 'Cancel', dishes_path, class: 'btn btn-secondary' %>
<% end %>
